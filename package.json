{
  "name": "k8sintellect",
  "version": "0.1.0",
  "description": "Web dashboard for OpenShift/Kubernetes cluster analysis powered by k8sgpt",
  "main": "dist/index.js",
  "bin": {
    "k8sintellect": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/cli.ts",
    "dev:server": "tsx watch src/server/index.ts",
    "start": "node dist/cli.js",
    "start:server": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "k8sgpt",
    "openshift",
    "kubernetes",
    "analysis",
    "dashboard",
    "cli"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/schwesig/k8sintellect.git"
  },
  "bugs": {
    "url": "https://github.com/schwesig/k8sintellect/issues"
  },
  "homepage": "https://github.com/schwesig/k8sintellect#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "@patternfly/patternfly": "^6.4.0",
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  }
}
