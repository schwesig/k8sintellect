# Logging
LOG_LEVEL=info

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=localhost

# K8sGPT Configuration
# IMPORTANT: Anonymous mode is ENABLED by default for security/privacy
# No cluster data is sent to external AI services in anonymous mode
K8SGPT_ANONYMOUS_MODE=true

# External AI Integration (only used if anonymousMode=false)
# WARNING: Enabling external AI will send cluster data to third-party services
# K8SGPT_ANONYMOUS_MODE=false
# K8SGPT_AI_PROVIDER=openai
# K8SGPT_API_KEY=your-api-key
# K8SGPT_MODEL=gpt-4

# Kubernetes Configuration
# Uses default kubeconfig from ~/.kube/config
# Override with KUBECONFIG environment variable if needed
